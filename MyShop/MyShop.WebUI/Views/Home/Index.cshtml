@model IEnumerable<MyShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>
@foreach (var item in Model)
{
    <div class="col-md-4" style="height: 450px; padding: 10px; margin: 10px; border: solid thin whitesmoke">
        
        <div class="col-md-12">
            <img class="img-rounded" style="height: 250px" src="~/Content/ProductImages/@item.Image"/>
        </div>
        <div class="col-md-12">
            <strong>
                @Html.ActionLink(item.Name, "Details", new {id=item.Id})
            </strong>
        </div>
        <div class="col-md-12">
            <div class="well">
                @item.Description
                <h5>Price: @item.Price</h5> 
            </div>
        </div>
        <a href="" class="btn btn-default">Add to Basket</a>
    </div>
}

.<div class="col-md-12 clearfix"/>